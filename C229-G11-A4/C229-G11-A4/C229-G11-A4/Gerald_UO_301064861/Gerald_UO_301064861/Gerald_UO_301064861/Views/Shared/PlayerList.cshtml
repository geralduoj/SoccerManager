@model ClubListViewModel

    <div class="my-3 p-3 bg-white rounded shadow-sm">
        <h6 class="border-bottom border-gray pb-2 mb-0">Player List</h6>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Pos</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                    </tr>
                    @if (ViewBag.Players != null)
                    {
                        foreach (Player p in Model.Players)
                        {
                            <tr>
                                <td>@p.PlayerID</td>
                                <td>@p.PlayerPosition</td>
                                <td>@p.PlayerFirstname</td>
                                <td>@p.PlayerLastName</td>
                                <td>@p.DateOfBirth</td>
                            </tr>
                        }
                    }
                    <tr>
                        <td>ID</td>
                        <td>Pos</td>
                        <td>First Name</td>
                        <td>Last Name</td>
                        <td>Age</td>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>

    </div>