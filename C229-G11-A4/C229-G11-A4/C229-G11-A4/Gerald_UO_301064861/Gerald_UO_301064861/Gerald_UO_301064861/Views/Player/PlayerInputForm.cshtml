@model Player

<input type="hidden" asp-for="PlayerID" />
<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="PlayerFirstname">First Name</label>
        <input type="text" asp-for="PlayerFirstname" class="form-control">
        <div class="invalid-feedback">
            Valid first name is required.
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <label asp-for="PlayerLastName">Last Name</label>
        <input asp-for="PlayerLastName" type="text" class="form-control">
        <div class="invalid-feedback">
            Valid last name is required.
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <label asp-for="DateOfBirth">Date of Birth</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
            </div>
            <input asp-for="DateOfBirth" type="date" class="form-control">
        </div>
    </div>

    <div class="col-md-6 mb-3">
        <label asp-for="PlayerPosition">Preferred Player Position</label>
        <select class="custom-select d-block w-100" asp-for="PlayerPosition" required>
            <option value="">Choose...</option>
            <option>GK</option>
            <option>DEF</option>
            <option>MID</option>
            <option>ATT</option>
        </select>
    </div>

    <div class="col-md-6 mb-3">
        <label asp-for="PlayerClub.ClubID">Registered Club</label>
        <input asp-for="PlayerClub.ClubID" name="" value="@ViewBag.ClubName" type="text" class="form-control" disabled>
    </div>
</div>