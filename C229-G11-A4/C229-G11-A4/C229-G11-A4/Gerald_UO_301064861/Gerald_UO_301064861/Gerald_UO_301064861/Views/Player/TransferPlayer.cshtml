@model Player
@{
    ViewData["Title"] = "Transfer Player";
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}

    <main role="main">

        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row">
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-body">
                                <p class="card-text">@ViewBag.ClubName</p>
                                <hr />
                                <p class="card-text">@ViewBag.ClubBio</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a class="nav-link btn btn-primary btn-sm btn-block" asp-controller="Clubs" asp-action="ClubInfo" asp-route-id="@ViewBag.ClubID">Club Info</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-primary rounded shadow-sm">
                            <i class="fas fa-2x mr-3 fa-users"></i>
                            <div class="lh-100">
                                <h6 class="mb-0 text-white lh-100">Transfer Player</h6>
                                <small>Use the form below to manage a player from @ViewBag.ClubName to a new club</small>
                            </div>
                        </div>

                        <div class="my-3 p-3 bg-white rounded shadow-sm">
                            <h6 class="border-bottom border-gray pb-2 mb-0">Transfer Player</h6>

                            <form class="needs-validation" novalidate asp-action="TransferPlayer" method="post">
                                <input type="hidden" asp-for="PlayerID" />
                                <div class="row">

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="PlayerClub.ClubID">Registered Club</label>
                                        <input asp-for="PlayerClub.ClubID" name="" value="@ViewBag.ClubName" type="text" class="form-control" disabled>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="PlayerPosition">New Club</label>
                                        <select class="custom-select d-block w-100" asp-for="ClubID" required>
                                            <option value="">Choose...</option>
                                            @foreach (var club in ViewBag.OtherClubs)
                                            {
                                                <option value="@club.ClubID">@club.ClubName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <button class="btn btn-secondary" type="submit">Transfer Player</button>
                            </form>

                        </div>

                    </div>


                </div>
            </div>
        </div>

    </main>
