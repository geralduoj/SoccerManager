@model Player
@{
    ViewData["Title"] = "Manage Players";
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}

<main role="main">

    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <p class="card-text">@ViewBag.ClubName</p>
                            <hr />
                            <p class="card-text">@ViewBag.ClubBio</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="nav-link btn btn-primary btn-sm btn-block" asp-controller="Clubs" asp-action="ClubInfo" asp-route-id="@ViewBag.ClubID">Club Info</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-primary rounded shadow-sm">
                        <i class="fas fa-2x mr-3 fa-users"></i>
                        <div class="lh-100">
                            <h6 class="mb-0 text-white lh-100">Manage Player</h6>
                            <small>Use the form below to manage a player for @ViewBag.ClubName</small>
                        </div>
                    </div>

                    <div class="my-3 p-3 bg-white rounded shadow-sm">
                        <h6 class="border-bottom border-gray pb-2 mb-0">Manage a player for @ViewBag.ClubName</h6>

                        @if (Model == null || Model.PlayerID == 0)
                        {
                            <form class="needs-validation" novalidate asp-action="CreatePlayer" method="post">
                                @Html.Partial("PlayerInputForm", Model)
                                <button class="btn btn-primary btn-sm btn-block" type="submit">Add Player</button>
                            </form>
                        }
                        else
                        {
                            <form class="needs-validation" novalidate asp-action="UpdatePlayer" method="post">
                                @Html.Partial("PlayerInputForm", Model)
                                <button class="btn btn-secondary" type="submit">Update Player</button>
                            </form>
                        }

                    </div>

                </div>


            </div>
        </div>
    </div>

</main>